<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_selected="false">
        <layer-list>
            <item>
                <shape>

                    <stroke android:width="0.1dp" android:color="#000000" />
                    <gradient android:startColor="#c9cfcfcf" android:centerColor="#ffffff"  android:endColor="#ffffff" android:angle="315"/>
                    <corners android:radius="8dp" />

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true"
        android:state_selected="false">
        <layer-list>
            <item>
                <shape>

                    <stroke android:width="0.1dp" android:color="#1bc95e" />
                    <solid android:color="#1c000000"/>
                    <corners android:radius="8dp" />

                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="false"
        android:state_selected="true"
        >
        <layer-list>
            <item>
                <shape>

                    <stroke android:width="2dp" android:color="#1bc95e" />
                    <solid android:color="#1c000000"/>
                    <corners android:radius="8dp" />

                </shape>
            </item>

            <item android:gravity="center"
                android:drawable="@drawable/ic_check_circle_green">
            </item>
        </layer-list>
    </item>

</selector>