<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:endColor="@android:color/white" android:startColor="@android:color/white" />

                    <stroke android:width="1dp" android:color="@color/colorPrimary" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center" android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:endColor="@android:color/white" android:startColor="@android:color/white" />

                    <stroke android:width="1dp" android:color="#8dc1e4" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center" android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
    </item>

</selector>