<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="7dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/found_image_holder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/found_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ddd"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_hospital"/>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_button"
            android:layout_toStartOf="@+id/view_button"
            android:layout_toRightOf="@+id/found_image_holder"
            android:layout_toEndOf="@+id/found_image_holder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/found_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/almost_black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:maxLines="2"
                android:text="Continental Hospitals"
                />

            <TextView
                android:id="@+id/found_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_below="@+id/found_title"
                android:layout_toRightOf="@+id/found_image_holder"
                android:maxLines="2"
                android:text="Continental Hospitals"
                />

        </LinearLayout>


        <Button
            android:id="@+id/view_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="View"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:background="@drawable/action_button"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>