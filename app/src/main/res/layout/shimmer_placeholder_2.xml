<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <View
            android:id="@+id/date_text"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="1dp"
            android:background="#ddd"/>

        <View
            android:id="@+id/generic_name_text"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/date_text"
            android:background="#ddd"/>

        <View
            android:id="@+id/instruction_title"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_below="@+id/generic_name_text"
            android:layout_marginTop="10dp"
            android:background="#ddd"/>

        <View
            android:id="@+id/instruction_text"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@+id/instruction_title"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:layout_toLeftOf="@+id/add_to_cart_button"
            android:layout_toStartOf="@+id/add_to_cart_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="14sp"
            android:background="#ddd"/>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/instruction_text">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_margin="5dp"
                    android:background="#ddd"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddd"/>

            </LinearLayout>

            <View
                android:layout_alignParentBottom="true"
                style="@style/VerticalDivider"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_margin="5dp"
                    android:background="#ddd"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddd"/>


            </LinearLayout>

            <View
                android:layout_alignParentBottom="true"
                style="@style/VerticalDivider"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_margin="5dp"
                    android:background="#ddd"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddd"/>


            </LinearLayout>



        </TableRow>

    </RelativeLayout>

</android.support.v7.widget.CardView>