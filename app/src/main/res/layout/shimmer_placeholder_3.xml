<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/top_panel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/generic_name_text"
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="10dp"
                android:background="#ddd"
                android:text="Requesting Physician"/>

            <View
                android:id="@+id/instruction_title"
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:layout_toRightOf="@+id/generic_name_text"
                android:layout_toEndOf="@+id/generic_name_text"
                android:layout_toLeftOf="@+id/instruction_text"
                android:layout_toStartOf="@+id/instruction_text"
                android:layout_margin="10dp"
                android:background="#ddd"
                android:text="Dr. Sarah Omoike"/>

            <View
                android:id="@+id/instruction_text"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="#ddd"
                android:text="View Report"/>

        </RelativeLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/top_panel_layout">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:background="#ddd"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddd"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:background="#ddd"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddd"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_margin="5dp"
                    android:background="#ddd"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:background="#ddd"/>


            </LinearLayout>



        </TableRow>

    </RelativeLayout>

</android.support.v7.widget.CardView>