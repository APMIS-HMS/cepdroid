<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/transaction_title"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_margin="7dp"
            android:layout_toStartOf="@+id/transaction_amount"
            android:layout_toLeftOf="@+id/transaction_amount"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textColor="#292929"
            android:background="#ddd"
            android:text="Laboratory Levy is the thing here"/>

        <View
            android:id="@+id/transaction_amount"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:background="@drawable/grey_text_bacground"
            android:text="@string/trx_amount_placeholder"/>

        <View
            android:id="@+id/date"
            android:layout_width="160dp"
            android:layout_height="12dp"
            android:layout_below="@+id/transaction_title"
            android:layout_margin="7dp"
            android:background="#ddd"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>