<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".ui.dashboard.find.foundItems.foundHospital.FoundHospitalDetailFragment">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            android:layout_marginBottom="15dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/logo_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_default_hospital"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circular_edge_fade"/>

                    <ProgressBar
                        android:id="@+id/logo_loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/logo_frame"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/logo_frame"
                    android:layout_toEndOf="@+id/logo_frame"
                    android:layout_margin="5dp"
                    android:text="My Hospital"/>

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hospital_name"
                    android:layout_alignStart="@+id/hospital_name"
                    android:layout_below="@+id/hospital_name"
                    android:autoLink="email"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp"
                    android:text="My Hospital"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hospital_name"
                    android:layout_alignStart="@+id/hospital_name"
                    android:layout_below="@+id/email_text"
                    android:layout_margin="10dp">

                    <ProgressBar
                        android:id="@+id/price_loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:id="@+id/map_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/register_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/action_button"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:text="Register"
                            android:layout_marginTop="4dp"/>


                    </LinearLayout>


                </FrameLayout>

                <LinearLayout
                    android:id="@+id/price_service_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_alignLeft="@+id/hospital_name"
                    android:layout_alignStart="@+id/hospital_name"
                    android:layout_below="@+id/hospital_name"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:text="Select registration service and price"/>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <Spinner
                            android:id="@+id/service_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/select_service"
                            android:layout_weight="1"/>

                        <Spinner
                            android:id="@+id/price_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/select_price"
                            android:layout_weight="1"/>

                    </TableRow>

                    <Button
                        android:id="@+id/pay_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:background="@drawable/action_button"
                        android:visibility="gone"
                        android:text="Pay"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_phone"/>

                        <TextView
                            android:id="@+id/phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:text=". . ."/>

                    </LinearLayout>

                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/VerticalDivider"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_web"/>

                        <TextView
                            android:id="@+id/website_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:text=". . ."/>

                    </LinearLayout>

                </TableRow>

                <View
                    android:id="@+id/divider_line"
                    style="@style/HorizontalDivider"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="1dp"/>

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=". . ."
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/ic_location"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/map_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>