<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".ui.dashboard.find.foundItems.foundHospital.FoundHospitalDetailFragment">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            android:layout_marginBottom="15dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/logo_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/ic_default_hospital"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/circular_edge_fade"/>

                    <ProgressBar
                        android:id="@+id/logo_loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/logo_frame"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/logo_frame"
                    android:layout_toEndOf="@+id/logo_frame"
                    android:layout_margin="5dp"
                    android:text="My Hospital"/>

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hospital_name"
                    android:layout_alignStart="@+id/hospital_name"
                    android:layout_below="@+id/hospital_name"
                    android:layout_marginBottom="5dp"
                    android:autoLink="email"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_mail_outline"
                    android:drawableStart="@drawable/ic_mail_outline"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:text=". . ."/>

                <TextView
                    android:id="@+id/reg_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/hospital_name"
                    android:layout_alignStart="@+id/hospital_name"
                    android:layout_below="@+id/email_text"
                    android:drawableLeft="@drawable/ic_copyright_24dp"
                    android:drawableStart="@drawable/ic_copyright_24dp"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:text=". . ."/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Hospital Registration"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/faq_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:textColorLink="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:text="What's this?"/>

                </RelativeLayout>

                <View
                    style="@style/HorizontalDivider"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="4dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_margin="10dp">

                    <TableRow
                        android:id="@+id/reg_status_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <FrameLayout>

                            <ProgressBar
                                android:id="@+id/price_loader"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center" />

                            <ImageView
                                android:id="@+id/image_register"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/ic_check_circle_green"
                                android:visibility="gone"/>

                        </FrameLayout>

                        <TextView
                            android:id="@+id/reg_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="Loading registration status..."/>



                    </TableRow>

                    <LinearLayout
                        android:id="@+id/register_btn_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="invisible">

                        <Button
                            android:id="@+id/register_button"
                            android:layout_width="150dp"
                            android:layout_height="44dp"
                            android:background="@drawable/action_button"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:text="Register"
                            android:layout_marginTop="4dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/price_service_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:animateLayoutChanges="true"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <RadioGroup
                            android:id="@+id/pay_type_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/pocket_radio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:checked="true"
                                android:text="Pocket "/>

                            <RadioButton
                                android:id="@+id/insurance_radio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Insurance "/>

                            <RadioButton
                                android:id="@+id/family_radio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Family "/>

                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_margin="5dp"
                            android:text="Select registration service and price"/>

                        <TableRow
                            android:id="@+id/family_cover_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_margin="0dp">

                            <EditText
                                android:id="@+id/pid_text"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:hint="Principal ID"
                                android:background="@drawable/textview_background_no_background_color"
                                android:entries="@array/select_service"
                                android:layout_weight="1.2"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:layout_weight="0.2"/>

                            <EditText
                                android:id="@+id/client_id_text"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:maxLines="1"
                                android:gravity="start|center_vertical"
                                android:background="@drawable/textview_background_no_background_color"
                                android:hint="Client ID"
                                android:layout_weight="1"/>

                        </TableRow>

                        <TableRow
                            android:id="@+id/insurance_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_margin="0dp">

                            <Spinner
                                android:id="@+id/hmo_spinner"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:background="@drawable/spinner_background_no_background_color"
                                android:entries="@array/select_hmo"
                                android:layout_weight="1.2"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:layout_weight="0.2"/>

                            <EditText
                                android:id="@+id/insurance_id_text"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:maxLines="1"
                                android:gravity="start|center_vertical"
                                android:background="@drawable/textview_background_no_background_color"
                                android:hint="Insurance ID"
                                android:layout_weight="1"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp">

                            <Spinner
                                android:id="@+id/service_spinner"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:background="@drawable/spinner_background_no_background_color"
                                android:entries="@array/select_service"
                                android:layout_weight="1.2"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:layout_weight="0.2"/>

                            <Spinner
                                android:id="@+id/price_spinner"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:background="@drawable/spinner_background_no_background_color"
                                android:entries="@array/select_price"
                                android:layout_weight="1"/>

                        </TableRow>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/pay_button"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:enabled="false"
                                android:textColor="@android:color/white"
                                android:background="@drawable/action_button"
                                android:text="Pay"/>

                        </FrameLayout>


                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Contact Details"
                    android:layout_margin="5dp"/>

                <View
                    style="@style/HorizontalDivider"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="4dp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_phone"/>

                        <TextView
                            android:id="@+id/phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:autoLink="phone"
                            android:textColorLink="@color/colorPrimary"
                            android:text=". . ."/>

                    </LinearLayout>

                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/VerticalDivider"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_web"/>

                        <TextView
                            android:id="@+id/website_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:autoLink="web"
                            android:textColorLink="@color/colorPrimary"
                            android:text=". . ."/>

                    </LinearLayout>

                </TableRow>

                <View
                    android:id="@+id/divider_line"
                    style="@style/HorizontalDivider"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="1dp"/>

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=". . ."
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/ic_location"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/map_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginBottom="20dp">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>