<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:text="@string/recently_booked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/recently_booked_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recently_booked_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recently_booked_header"/>

    <TextView
        android:id="@+id/recently_booked_more_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:layout_alignEnd="@id/recently_booked_recycler"
        android:layout_alignRight="@id/recently_booked_recycler"
        android:layout_below="@id/recently_booked_recycler"
        android:paddingRight="20dp"/>

    <TextView
        android:text="@string/previous_appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/previous_appointment_header"
        android:layout_below="@id/recently_booked_more_less"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/previous_appointment_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previous_appointment_header"/>

    <TextView
        android:id="@+id/previous_appointment_more_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:layout_alignEnd="@id/previous_appointment_recycler"
        android:layout_alignRight="@id/previous_appointment_recycler"
        android:layout_below="@id/previous_appointment_recycler"
        android:paddingRight="20dp"/>

</RelativeLayout>