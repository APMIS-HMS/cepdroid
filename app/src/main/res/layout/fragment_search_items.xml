<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef"
    tools:context=".ui.dashboard.find.foundItems.FoundItemsActivity">

    <!-- Make focusable to prevent search view from receiving unnecessary focus-->
    <android.support.v7.widget.CardView
        android:id="@+id/search_card"
        android:transitionName="search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="10dp">

        <TableRow
            android:id="@+id/search_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.SearchView
                android:id="@+id/find_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:theme="@style/AppSearchView"
                android:background="@drawable/search_background"
                app:queryBackground="@drawable/search_background"
                app:iconifiedByDefault="false">

            </android.support.v7.widget.SearchView>

            <Spinner
                android:id="@+id/find_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:theme="@style/SmallSpinner"
                android:spinnerMode="dropdown"
                android:entries="@array/filter">
            </Spinner>

        </TableRow>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/empty_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:alpha="0.5"
                app:srcCompat="@drawable/ic_search_gray"/>

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_image"
                android:layout_margin="15dp"
                android:padding="3dp"
                android:gravity="center"
                android:textColor="#777"
                android:text="@string/empty_search_text" />

        </RelativeLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/search_shimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />
                <include layout="@layout/shimmer_placeholder_5" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:listitem="@layout/layout_found_item">


        </android.support.v7.widget.RecyclerView>


    </FrameLayout>

</LinearLayout>